<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <!--мой сервлет -->
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>org.leyla.MainServlet</servlet-class>
    </servlet>

    <!--параметры инициализации сервлета -->
    <context-param>
        <param-name>default-tab</param-name>
        <param-value>1</param-value>
    </context-param>

    <!--адрес-->
    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern>/shop/*</url-pattern>
    </servlet-mapping>

    <!--авторизация-->
    <security-constraint>
        <web-resource-collection>
            <url-pattern>/secured/*</url-pattern>
        </web-resource-collection>

        <auth-constraint>
            <role-name>tomcat</role-name>
        </auth-constraint>

        <user-data-constraint>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>

    <login-config>
        <auth-method>FORM</auth-method>

        <form-login-config>
            <form-login-page>/auth/auth.jsp</form-login-page>
            <form-error-page>/auth/auth-error.jsp</form-error-page>
        </form-login-config>
    </login-config>

    <security-role>
        <role-name>tomcat</role-name>
    </security-role>

    <listener>
        <listener-class>org.leyla.hibernate.HibernateListener</listener-class>
    </listener>


    <!-- A filter that sets character encoding that is used to decode -->
    <!-- parameters in a POST request -->
    <filter>
        <filter-name>setCharacterEncodingFilter</filter-name>
        <filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>

    <!-- The mapping for the Set Character Encoding Filter -->
    <filter-mapping>
        <filter-name>setCharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>


